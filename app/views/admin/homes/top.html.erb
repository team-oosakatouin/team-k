<div class="container my-5">
  <div class="row">
    <div class = "col-9 ml-auto mr-auto">
      <h5 class = "text-center mb-3" style = "background-color:#eee; width:160px; font-weight: bold;">注文履歴一覧</h5>
      <table class="table">
        <thead>
          <tr style="background-color: #eee;">
            <th style="width:200px;">注文日時</th>
            <th style="width:200px;">購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order), class:"text-dark", style:"text-decoration: underline;" do %>
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                <% end %>
              </td>
              
              <td>
                <%= order.name %>
              </td>
              
              <td><%= order.order_details.count %></td>

              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
  </div>
</div>