<div class=“row”>
	<h2>会員一覧</h2>

	<table class="table">
	    <thead>
			<tr>
				<th>会員ID</th>
				<th>氏名</th>
				<th>メールアドレス</th>
				<th>ステータス</th>
			</tr>
		</thead>

		<tbody>
			<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td style>
						<%= link_to customer.last_name, admin_customer_path(customer.id) %>
						<%= link_to customer.first_name, admin_customer_path(customer.id)  %>
					</td>
	  				<td> <%= customer.email %></td>
					<td>
						<% if customer.is_deleted == false %>
                有効
              <% else %>
                退会
              <% end %>
					</td>
				</tr>
			<% end %>
			<!-- kaminariのgemを使用するための記述 -->
			<%= paginate @customers %>
		</tbody>
	</table>
</div>