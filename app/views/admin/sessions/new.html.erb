<div class = "container">
  <div class=“row”>
    <div class='col-md-8 offset-2'>
      <h4 class="my-4 mt-5", style="background-color: #eee; width:190px; padding-left: 12px;">管理者ログイン</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field text-center mb-3">
        <%= f.label :メールアドレス, class: "mr-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",:size => "40" %>
      </div>
      <div class="field text-center">
        <%= f.label :パスワード, class: "mr-5" %>
        <%= f.password_field :password, autocomplete: "current-password",:size => "40" %>
      </div>
      <div class="actions text-center mt-5">
        <%= f.submit "ログイン", class: "btn btn-primary px-5", style:"font-weight:bold;" %>
      </div>
      <% end %>
      <%= render "admin/shared/links", class: "btn btn-primary" %>
    </div>
  </div>
</div>