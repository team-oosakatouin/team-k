
<h2 class="text-left" "p-3 mb-2 bg-primary text-white">商品一覧</h2>

  <%=  link_to users_path,class: 'nav-link text-light' do %>
    <i class="fas fa-users"></i>
  <% end %>


<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item.id %></td>
        <td><%= link_to item.name,item, class: "book_#{book.id}" %></td>
        <td><%= item.price %></td>
        <td><%= genres.genres.name %></td>
        <td><%= items.is_active %></td>
      </tr>
    <% end %>
  </tbody>
</table>