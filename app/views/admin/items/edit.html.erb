
  <div class="container">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="row">
    <%= form_for(@item, url: admin_item_path(@item), method: :patch) do |f| %>

    <div class="col-xs-5">
     <h2>商品編集</h2>

      <div class="item-new-form">
        <%= f.file_field :image_id %>
      </div>
    </div>

    <br><br><br>
      <div class="col-xs-5 col-xs-offset-2">
        <table class="new-form-table">
          <tbody>

            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>

            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :introduction, class: "form-control" %></td>
            </tr>

            <tr>
              <th>ジャンル</th>
              <td>          <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>

            <tr>
              <th>税抜価格</th>
              <td>  <%= f.text_field :price, class: "form-control" %></td>
            </tr>

            <tr>
              <th>販売ステータス</th>
              <td><%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "売切れ" %></td>
            </tr>
          </tbody>
        </table>

        <div class="text-right">
        <%= f.submit "更新" ,class: "btn btn-primary text-right" %>
        </div>
        </div>
        <% end %>

    </div>
  </div>
</div>