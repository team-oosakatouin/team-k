  <div class="container">
    <h4 class="text-center", style="background-color:#eee; width:150px; margin:30px 0 30px 100px;">商品編集</h4>
    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch, local: true  do |f| %>
    <%= render "public/shared/error_messages", resource: @item %>
    <div class="row">
      <div class="col-md-8 m-auto">
        <div class="form-group">
          <%= f.label :商品画像, style:"margin-right:70px;" %>
          <%= f.file_field :image_id, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :商品名, style:"margin-right:86px;" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :商品説明, style:"vertical-align:top; margin-top:5px; margin-right:70px;" %>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.label :ジャンル, style:"margin-right:70px;" %>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %>
        </div>
        <div class="form-group">
          <%= f.label :税抜価格, style:"margin-right:70px;" %>
          <%= f.text_field :price %><%= "円" %>
        </div>
        <div class="form-group">
          <%= f.label :sale_status, "販売ステータス", style:"margin-right:20px;"  %>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", style:"margin-right:20px;" %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "売切れ", style:"margin-right:20px;" %>
        </div>
        <div class="actions row">
          <%= f.submit "更新を保存" ,class:"btn btn-success", style:"font-weight:bold; padding:5px 20px; margin:20px 20px 0 220px;" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
