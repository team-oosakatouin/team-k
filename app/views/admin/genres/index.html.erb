<div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>
 <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
  <div class="form-group">
    <%= f.label :ジャンル %>
    <%= f.text_field :name,class: "col-md-4" %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>

   <br>
      <table class="table genre-index">
        <thead>
          <tr>
            <th>ジャンル</th>
            
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>

              </td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
<% end %>
