
		<h2>配送先登録/一覧</h2>
		<%= form_for @address, :url => {:action => :create} do |f| %>

			<div class="field">
				<label class="postal-code-label">郵便番号(ハイフンなし)</label>
				<%= f.text_field :postal_code, autofocus: true, class:"" %>
			</div>

			<div class="field">
				<label class="address-label">住所</label>
				<%= f.text_field :address, autofocus: true, class:"" %>
			</div>

			<div class="field">
			  <label class="address-label">宛名</label>
				<%= f.text_field :name, autofocus: true, class:"" %>
			</div>

			<%= f.submit "新規登録", class: "btn btn-success submit" %>
		<% end %>

		<table class="table table-bordered address-table">
			<thead>
				<tr class="table-head" style="background-color:#F5F5F5;">
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th>&nbsp;</th>
					<th></th>
				</tr>
			</thead>

		  <tbody>
	      <% @addresses.each do |address|  %>
			    <tr>
				    <td><%= address.postal_code %></td>
				    <td><%= address.address %></td>
					  <td><%= address.name %></td>
					  <td><%= link_to "編集する", edit_public_address_path(address.id),class: "btn btn-primary"%></td>
					  <td><%= link_to "削除する", public_address_path(address.id),  class: "btn btn-danger", method: :delete %></td>
				  </tr>
			  <% end %>
		  </tbody>
		</table>
	</div>
</div>