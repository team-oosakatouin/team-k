<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.label :（姓） %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
      <%= f.label :（名） %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :フリガナ %><br />
      <%= f.label :（セイ） %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
      <%= f.label :（メイ） %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :電話番号（ハイフンなし） %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
