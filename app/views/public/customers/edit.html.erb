<div class="row login-row">
	<div class = "body" style>
		<div class = "container">
			<h2>会員情報編集</h2>

				<%= form_for(@customers, url: public_customer_path(@customers),html: {method: "patch"}) do |f| %>

				<div class="field">
				    <%= f.label :名前 %><br />
				    <%= f.label :（姓） %>
				    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
				    <%= f.label :（名） %>
				    <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
				 </div>

				 <div class="field">
				    <%= f.label :フリガナ %><br />
				    <%= f.label :（セイ） %>
				    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
				    <%= f.label :（メイ） %>
				    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
				 </div>

				 <div class="field">
				    <%= f.label :郵便番号（ハイフンなし） %><br />
				    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
				 </div>

				 <div class="field">
				    <%= f.label :住所 %><br />
				    <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
				 </div>

				 <div class="field">
				    <%= f.label :電話番号（ハイフンなし） %><br />
				    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
				 </div>

				 <div class="field">
				    <%= f.label :メールアドレス %><br />
				    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
				 </div>
			  <%= f.submit "編集内容を保存", class: "btn btn-primary" %>
        <% end %>

			  <!--退会確認画面のurl(quit)-->
				<%= link_to "退会する",public_customers_quit_path, class: "btn btn-danger withdrawal_page_btn" %>

		</div>
	</div>
</div>