<div class="container mt-5">
  <div class="row mb-4">
    <div class="p-1 mb-1 bg-light text_dark">
      <h3>マイページ</h3>
    </div>
  </div>
</div>
<div class="container ml-5">
  <div class="row">
    <div class="col-1">
      <strong>登録情報</strong>
    </div>
    <div>
      <%= link_to " 編集する",  edit_public_customer_path, class: "btn btn-success w-15px" %>
    </div>

    <div class="container ml-5">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-secondary">氏名</th>
            <td><%= current_customer.last_name %>&nbsp;<%= current_customer.first_name %></td>
          </tr>

          <tr>
            <th class="table-secondary">カナ</th>
            <td><%= current_customer.last_name_kana %>&nbsp;<%= current_customer.first_name_kana %></td>
          </tr>

          <tr>
            <th class="table-secondary">郵便番号</th>
            <td><%= current_customer.postal_code %></td>
          </tr>

          <tr>
            <th class="table-secondary">住所</th>
            <td><%= current_customer.address %></td>
          </tr>

          <tr>
            <th class="table-secondary">電話番号</th>
　          <td><%= current_customer.telephone_number %></td>
　        </tr>

          <tr>
　          <th class="table-secondary">メールアドレス</th>
　          <td><%= current_customer.email %></td>
　        </tr>
      </table>
      <p>
        <strong class="shipping-link">配送先　</strong>
        <%= link_to " 一覧を見る",  public_addresses_path, class: "btn btn-info" %>
      </p>

      <p>
        <strong class="shipping-link">注文履歴</strong>
        <%= link_to " 一覧を見る", public_orders_path, class: "btn btn-info" %>
      </p>