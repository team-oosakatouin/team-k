<div class="container">
  <h2>注文履歴一覧</h2>
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>

        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td>
                <% if order.address.length <8 %>
                  <% ship_address = ShipAddress.find(order.address) %>
                  <%= "〒" + ship_address.post_code + "  " + ship_address.address + "  " + ship_address.last_name + ship_address.first_name %>
                <% else %>
                  <%= order.address %>
                <% end %>
              </td>

              <td>
                <% order.order_details.each do |f| %>
                <%= f.item_name %><br>
                <% end %>
              </td>

              <td><%= order.total_price %>円</td>

              <td><%= order.order_status %></td>

              <td><%=link_to "表示する", order_path(order), class: "btn btn-success" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
  </div>