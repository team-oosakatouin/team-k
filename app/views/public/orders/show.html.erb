<div class="container">
  <h2>注文履歴詳細</h2>
  <strong>注文情報</strong>
    <div class="row">
      <div class="col">
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>支払方法</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td>
                <%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
              <td><%= @order.payment_method %></td>
              <td><%= @order.order_status %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <strong>請求情報</strong>
    <div class="row">
      <div class="col">
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <th>商品合計</th>
              <th>配送料</th>
              <th>ご請求額</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @order.total_price  %>円</td>
              <td><%= @order.shipping_cost %></td>
              <td><%= @order.total_price + @order.shipping_cost %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
      <strong>注文内容</strong>
      <div class="row">
        <div class="col">
          <table class="table table-bordered">
            <thead class="thead-light">
              <tr>
                <th>商品</th>
                <th>単価(税込)</th>
                <th>個数</th>
                <th>小計</th>
              </tr>
            </thead>

            <% @order_details.each do |d| %>
            <tbody>
              <tr>
                <td><%= d.item_name %></td>
                <td><%= (d.item_price * 1.1).floor %></td>
                <td><%= d.quantity %></td>
                <td><%= ((d.item_price * d.quantity) * 1.1).floor %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      </div>
  </div>